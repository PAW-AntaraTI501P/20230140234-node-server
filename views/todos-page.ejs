<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Daftar Tugas Saya</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Daftar Tugas Saya</h1>

      <!-- Form Tambah Todo -->
      <form id="addTodoForm" class="form-inline mb-4">
        <input
          type="text"
          id="newTask"
          class="form-control mr-2"
          placeholder="Tugas baru..."
          required
        />
        <button type="submit" class="btn btn-success">Tambah</button>
      </form>

      <!-- List Todo -->
      <% if (todos && todos.length > 0) { %>
      <ul class="list-group">
        <% todos.forEach(function(todo) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>ID: <%= todo.id %> | Tugas: <%= todo.task %></span>
          <div>
            <button
              class="btn btn-warning btn-sm mr-2 editBtn"
              data-id="<%= todo.id %>"
              data-task="<%= todo.task %>"
            >
              Edit
            </button>
            <button
              class="btn btn-danger btn-sm deleteBtn"
              data-id="<%= todo.id %>"
            >
              Hapus
            </button>
          </div>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="text-muted">Tidak ada tugas yang tersedia.</p>
      <% } %>

      <a href="/" class="btn btn-primary mt-4">Go to Home</a>
    </div>

    <!-- Script untuk interaksi dengan backend -->
    <script>
      // Tambah Todo
      document.getElementById("addTodoForm").addEventListener("submit", async function (e) {
        e.preventDefault();
        const task = document.getElementById("newTask").value;

        const res = await fetch("/todos", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ task }),
        });

        if (res.ok) {
          location.reload();
        } else {
          alert("Gagal menambah todo");
        }
      });

      // Edit Todo
      document.querySelectorAll(".editBtn").forEach((btn) => {
        btn.addEventListener("click", async function () {
          const id = this.getAttribute("data-id");
          const oldTask = this.getAttribute("data-task");
          const newTask = prompt("Edit tugas:", oldTask);

          if (newTask && newTask.trim() !== "") {
            const res = await fetch(`/todos/${id}`, {
              method: "PUT",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ task: newTask }),
            });

            if (res.ok) {
              location.reload();
            } else {
              alert("Gagal mengedit todo");
            }
          }
        });
      });

      // Hapus Todo
      document.querySelectorAll(".deleteBtn").forEach((btn) => {
        btn.addEventListener("click", async function () {
          const id = this.getAttribute("data-id");
          if (confirm("Yakin mau hapus todo ini?")) {
            const res = await fetch(`/todos/${id}`, {
              method: "DELETE",
            });

            if (res.ok) {
              location.reload();
            } else {
              alert("Gagal menghapus todo");
            }
          }
        });
      });
    </script>
  </body>
</html>
